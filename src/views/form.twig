{% extends 'layout.twig' %}

{% block content %}
    <div class="col-xs-12 vcenter">
        <br/>
        <form method="POST" class="form-horizontal" role="form">
            <div class="form-group form-group-lg">
                <div class="col-sm-12">
                    <input class="form-control short" type="text" name="story" id="story" value="" placeholder="Kerro meille mitä teit?">
                </div>
            </div>
            <div class="form-group form-group-lg">
                <div class="col-sm-12">
                    <input class="form-control" type="text" name="author" id="author" placeholder="Syötä vielä nimesi . . ." value="">
                </div>
            </div>
            <div class="form-group form-group-lg">
                <div class="col-sm-12 form-checkbox">
                    <input class="form-controls margin-right-10" type="checkbox" name="public" id="public" checked="true">Näytetään listauksissa
                </div>
            </div>
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success">Tallenna</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block title %}{% endblock %}

{% block create_new %}{% endblock %}